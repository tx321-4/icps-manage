extends layout

block content
  .container
    ol.breadcrumb
      li
        a(href="/") Home
      li 手机号
    if (user && user.roleId == '1' )          
      p.pull-right
        a(data-toggle="modal",data-target="#TelModal") 添加手机号
    .container.subject_container
      .row
        .col-sm-12.col-md-12
          table.table.table-striped
            caption
              .d-f-sb
                h3 电话列表: #{length} 个
            tbody
              colgroup
                col(width="10%")
                col(width="40%")
                col(width="30%")
                col(width="20%")
              thead
                tr
                  td ID
                  td 手机号
                  td 所属人
                  td 操作
              tbody
              each item in tels
                tr
                  td #{item.id}
                  td #{item.tel_num}
                  td #{item.tel_name}
                  td 
                    span.d-f-c(style="align-items: center;")
                      a(href="/tel/edit/#{item.id}",class="text-info") <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>


  //- TelModal
  div(class="modal fade",id="TelModal",tabindex="-1",role="dialog",data-backdrop="static")
    div(class="modal-dialog modal-sm",role="document")
      .modal-content
        .modal-header 添加手机号
        .modal-body
          form(action="/city/add", method="post",class="form-horizontal",role="form") 
            .form-group
              label(for="username",class="col-sm-3 control-label") 手机号
              .col-sm-8
                input(type="text",class="form-control",name="cityname",placeholder="请输入手机号",required)
            .form-group
              label(for="password",class="col-sm-3 control-label") 首字母
              .col-sm-8
                input(type="text",class="form-control",name="firstletter",placeholder="请输入首字母（大写）",required)
            hr
            .d-f-se  
              button(type="submit",class="btn btn-primary") 添加
              button(type="button",class="btn btn-default",data-dismiss="modal") 退出
